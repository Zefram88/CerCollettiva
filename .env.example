# Redis (opzionale per sviluppo)
REDIS_URL=redis://localhost:6379/1

# Host consentiti
ALLOWED_HOSTS=localhost,127.0.0.1

# Email (configurazione console per sviluppo)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend