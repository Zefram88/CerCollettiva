# File di esempio per variabili d'ambiente CerCollettiva
# Copia questo file come .env e modifica i valori secondo le tue esigenze

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Modalità debug (solo per sviluppo)
DEBUG=False

# Chiave segreta Django (GENERA UNA NUOVA PER PRODUZIONE!)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Chiave per crittografia campi sensibili
FIELD_ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production

# Host consentiti (separati da virgola)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database PostgreSQL
DB_NAME=cercollettiva
DB_USER=cercollettiva_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# URL Redis per cache e sessioni
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# MQTT SETTINGS
# =============================================================================

# Broker MQTT
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USER=mqtt_user
MQTT_PASS=mqtt_password
MQTT_QOS=1
MQTT_KEEPALIVE=60
MQTT_TLS=False

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Configurazione SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@cercollettiva.it

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# HTTPS settings (per produzione)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Grafana
GRAFANA_PASSWORD=admin

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Django Debug Toolbar (solo sviluppo)
DEBUG_TOOLBAR=False

# Log level
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Timeout cache per diversi tipi di dati
CACHE_TIMEOUT_15MIN=3600
CACHE_TIMEOUT_1H=7200
CACHE_TIMEOUT_1D=86400
CACHE_TIMEOUT_1M=604800
CACHE_TIMEOUT_1Y=2592000

# Abilita cache energetica
ENERGY_CACHE_ENABLED=True

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Limite dimensione file (in bytes)
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Geocoding API (opzionale)
GEOCODING_API_KEY=your-geocoding-api-key

# GAUDI API (se disponibile)
GAUDI_API_URL=https://api.gaudi.example.com
GAUDI_API_KEY=your-gaudi-api-key

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Configurazione backup automatico
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Ogni giorno alle 2:00
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Slack notifications (opzionale)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Telegram bot (opzionale)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Abilita/disabilita funzionalità
ENABLE_REAL_TIME_NOTIFICATIONS=True
ENABLE_MOBILE_API=True
ENABLE_ADVANCED_ANALYTICS=False
ENABLE_ENERGY_TRADING=False

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Numero worker Gunicorn
GUNICORN_WORKERS=3

# Timeout richieste
GUNICORN_TIMEOUT=120

# =============================================================================
# GDPR SETTINGS
# =============================================================================

# Abilita funzionalità GDPR
GDPR_ENABLED=True

# Giorni di retention dati utente inattivi
USER_RETENTION_DAYS=2555  # 7 anni

# Giorni di retention log
LOG_RETENTION_DAYS=365

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Nome container (per Docker Compose)
CONTAINER_NAME=cercollettiva

# Network Docker
DOCKER_NETWORK=cercollettiva_network
